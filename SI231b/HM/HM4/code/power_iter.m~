%Implementation of the power method for calculating the eigenvectors and eigenvalues of a matrix
clc;
clear;
A = [0 4.5
    5.6 0];
q = zeros(100,2);
q(1,:) = rand(2,1);
z = zeros(100,2);
lambda = zeros(1000,1);
[V,D] = eig(A);
for k = 2:100
    z(k,:) = A*q(k-1,:)'
    q(k,:) = z(k)/norm(z(k,:))
    lambda(k) = q(k,:)*A*q(k,:)'
    if abs(lambda(k)-D(1))<0.01
        break
    end
end
